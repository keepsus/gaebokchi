<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="imageboardSQL">
	<insert id="imageboardWrite" parameterType="imageboard">
		insert into T_SHOPPING_GOODS values(#{goods_id}
									, #{goods_title}
									, #{goods_country_of_origin}
									, #{goods_price}
									, #{goods_sales_price}
									, #{goods_point}
									, #{goods_status}
									, #{goods_delivery_price}
									, #{goods_delivery_date}
									, #{goods_delivery_extra_charge}
									, #{goods_delivery_free_condition}
									, #{goods_filename}
									, #{goods_filename_detail}
									, #{goods_context})
	</insert>
	
	<select id="getImageboardList" parameterType="java.util.Map" resultType="imageboard">
		select * from
		(select rownum rn, tt.* from
		(select * from T_SHOPPING_GOODS order by goods_id desc)tt
		)
	</select>
	
	<select id="getImageboardTotalA" resultType="int">
		select count(*) from T_SHOPPING_GOODS
	</select>
	
	<select id="getImageboardView" parameterType="int" resultType="imageboard">
		select * from T_SHOPPING_GOODS where goods_id=#{goods_id}
	</select>
	
	<delete id="imageboardDelete" parameterType="java.util.Map">
		delete T_SHOPPING_GOODS where goods_id in
		
		<foreach collection="array" item="data" index="i" open="(" close=")" separator=",">
			<!-- ${array[i]} -->
			#{data}
		</foreach>
		
	</delete>
</mapper>





















